public static void main(String[] args) {
        java.util.Scanner scan = new java.util.Scanner(System.in);
        double raio, area;
        System.out.println("Digite o raio");
        raio = scan.nextDouble();
        area = 3.14159 * raio * raio;
        System.out.printf("A=%.4f",area);
         
    }
    
}
